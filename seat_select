    <!-- Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>예매 정보</h2>
            <p id="modalSeats">Selected seats: </p>
            <button id="closeModal" class="reserve-button">확인</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const sessionData = {
                movieName: urlParams.get('movie') || "error",
                theater: urlParams.get('theater') || "error",
                date: urlParams.get('date') || "error",
                time: urlParams.get('time') || "error"
            };
        
            // 세션 데이터를 영화 정보 블록에 표시
            document.getElementById("movieName").textContent = `영화 이름: ${sessionData.movieName}`;
            document.getElementById("theater").textContent = `영화관 지점: ${sessionData.theater}`;
            document.getElementById("date").textContent = `예매 날짜: ${sessionData.date}`;
            document.getElementById("time").textContent = `예매 시간: ${sessionData.time}`;
        
            const seats = document.querySelectorAll('.row .seat:not(.occupied)');
            const selectionInfo = document.getElementById('selectionInfo');
            const reserveButton = document.getElementById('reserveButton');
            const modal = document.getElementById("myModal");
            const span = document.getElementsByClassName("close")[0];
            const closeModal = document.getElementById("closeModal");
            let selectedSeatsArray = [];
        
            seats.forEach(seat => {
                seat.addEventListener('click', () => {
                    seat.classList.toggle('selected');
                    updateSelection();
                });
            });
        
            function updateSelection() {
                const selectedSeats = document.querySelectorAll('.row .seat.selected');
                const seatNumbers = [...selectedSeats].map(seat => seat.textContent);
                selectionInfo.textContent = `선택 좌석 : ${seatNumbers.length}개 / ${seatNumbers.join(', ')}`;
                selectedSeatsArray = seatNumbers;
            }
        
            reserveButton.addEventListener('click', () => {
                if (selectedSeatsArray.length === 0) {
                    document.getElementById("modalSeats").innerHTML = "좌석을 선택해주세요.";
                    modal.style.display = "block";
                } else {
                    document.getElementById("modalSeats").innerHTML = `
                        영화 이름: ${sessionData.movieName}<br>
                        영화관 지점: ${sessionData.theater}<br>
                        예매 날짜: ${sessionData.date}<br>
                        예매 시간: ${sessionData.time}<br>
                        선택 좌석 ${selectedSeatsArray.length}석 : ${selectedSeatsArray.join(', ')}<br>
                        예매하시겠습니까?`;
                    modal.style.display = "block";
                }
            });
        
            // Close the modal when the 'x' is clicked
            span.onclick = function() {
                modal.style.display = "none";
            }
        
            // Close the modal when the '확인' button is clicked
            closeModal.onclick = function() {
                modal.style.display = "none";
            }
        
            // Close the modal when clicking anywhere outside of the modal
            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        });
         
    </script>
