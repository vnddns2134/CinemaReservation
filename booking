<script>
    document.addEventListener("DOMContentLoaded", function() {
        const movies = document.querySelectorAll(".movies li");
        const theaters = document.querySelectorAll(".theaters li");
        const dates = document.querySelectorAll(".dates li");
        const timeList = document.querySelector(".time-list");
        const selectSeatsButton = document.querySelector(".select-seats");

        const fixedTimes = ["9:00", "11:00", "13:00", "15:00", "17:00", "19:00", "21:00"];

        let sessionData = {
            movieName: "",
            theater: "",
            date: "",
            time: ""
        };

        movies.forEach(movie => {
            movie.addEventListener("click", function() {
                sessionData.movieName = movie.dataset.movie;
                updateSelected();
                updateHighlight(movies, movie);
            });
        });

        theaters.forEach(theater => {
            theater.addEventListener("click", function() {
                sessionData.theater = theater.dataset.theater;
                updateSelected();
                updateHighlight(theaters, theater);
            });
        });

        dates.forEach(date => {
            date.addEventListener("click", function() {
                sessionData.date = date.dataset.date;
                updateSelected();
                updateHighlight(dates, date);
            });
        });

        function updateSelected() {
            if (sessionData.movieName && sessionData.theater && sessionData.date) {
                const timeButtons = fixedTimes.map(time => {
                    const button = document.createElement("button");
                    button.textContent = time;
                    button.addEventListener("click", function() {
                        sessionData.time = time;
                        updateHighlight(timeList.querySelectorAll("button"), button);
                    });
                    return button;
                });

                timeList.innerHTML = "";
                timeButtons.forEach(button => {
                    timeList.appendChild(button);
                });
            }
        }

        function updateHighlight(list, selectedElement) {
            list.forEach(item => item.classList.remove("selected"));
            selectedElement.classList.add("selected");
        }

        selectSeatsButton.addEventListener("click", function() {
            if (sessionData.movieName && sessionData.theater && sessionData.date && sessionData.time) {
                const url = `seat_select.html?movie=${encodeURIComponent(sessionData.movieName)}&theater=${encodeURIComponent(sessionData.theater)}&date=${encodeURIComponent(sessionData.date)}&time=${encodeURIComponent(sessionData.time)}`;
                window.location.href = url;
            } else {
                alert("영화, 극장, 날짜, 시간을 모두 선택해주세요.");
            }
        });
    });
</script>
