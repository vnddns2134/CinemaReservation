    function displayMovies(movies) {
        const movieList = document.getElementById('movie-list');
        movieList.innerHTML = '';
        const totalViews = movies.reduce((acc, movie) => acc + movie.views, 0);


        movies.forEach((movie, index) => {
            const reservationRate = (movie.views / totalViews * 100).toFixed(2);
            const movieDiv = document.createElement('div');
            movieDiv.className = 'movie';
            movieDiv.innerHTML = `
                <a href="${movie.info}">
                    <img src="${movie.img}" alt="${movie.title}">
                </a>
                <div class="movie-info">
                    <h2 class="movie-title">${movie.title}</h2>
                    <p class="movie-description">${movie.description}</p>
                    <p class="movie-rating">평점: ${movie.rating}/10</p>
                    <p class="movie-rating">개봉일: ${movie.release}</p>
                    <p class="movie-rating">관람객: ${movie.views}명</p>
                    <a href="#" class="reserve-button">상세페이지</a>
                    <a>예매율 : ${reservationRate}%</a>
                </div>
            `;
            movieList.appendChild(movieDiv);
        });
    }

    function sortMovies(criteria) {
        let sortedMovies;
        if (criteria === 'rating') {
            sortedMovies = movies.sort((a, b) => b.rating - a.rating);
        } else if (criteria === 'release') {
            sortedMovies = movies.sort((a, b) => new Date(b.release) - new Date(a.release));
        } else if (criteria === 'views') {
            sortedMovies = movies.sort((a, b) => b.views - a.views);
        }
        displayMovies(sortedMovies);
        toggleSortMenu(); // 메뉴 닫기
    }

    function searchMovies() {
        const searchInput = document.getElementById('search-input').value.toLowerCase();
        const filteredMovies = movies.filter(movie => movie.title.toLowerCase().includes(searchInput));
        displayMovies(filteredMovies);
    }

    function toggleSortMenu() {
        document.getElementById("sortDropdown").classList.toggle("show");
    }

    function reloadPage() {
        location.reload();
    }

    // 초기 영화 목록 표시
    displayMovies(movies);

    // 드롭다운 메뉴 외부 클릭 시 닫기
    window.onclick = function(event) {
        if (!event.target.matches('.sort-button')) {
            var dropdowns = document.getElementsByClassName("sort-content");
            for (var i = 0; i < dropdowns.length; i++) {
                var openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('show')) {
                    openDropdown.classList.remove('show');
                }
            }
        }
    }
</script>



